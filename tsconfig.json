{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/src/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/context/*": ["src/context/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/styles/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/firebase/*": ["src/firebase/*"]
    },
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  // Uncomment the following lines to enable strict type checking
  // "strict": true,
  "noImplicitAny": false
  // "strictNullChecks": true,
  // Uncomment the following lines to specify custom module resolution
  // "baseUrl": "./",
  // "paths": {
  //   "@components/*": ["src/components/*"]
  // },
  // Uncomment the following lines to include additional files or exclude specific ones
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "dist"]
}
